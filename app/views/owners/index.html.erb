<div class="container">
  <h1>Owners List</h1>
  <%= link_to 'Add owner', new_owner_url, class: 'pull-right' %>
  <table class="table table-striped">
    <tr>
      <th>Id#</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th></th>
      <th></th>
    </tr>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.id %></td>
        <td><%= owner.first_name %></td>
        <td><%= owner.last_name %></td>
        <td><%= owner.gender %></td>
        <td><%= link_to 'Edit', [:edit, owner] %></td>
        <td><%= link_to 'Delete', owner, method: :delete %></td>
      </tr>
    <% end %>
  </table>
</div>
