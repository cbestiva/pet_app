<div class="container">
  <h1>Edit Pet</h1>
  <%= form_for @pet, html: {class: 'form-horizontal col-sm-4'} do |f| %>
    <% if @pet.errors.any? %>
      <ul>
        <% @pet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="form-group">
      <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :age, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :age, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :pet_type, 'Type', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :pet_type, class: 'form-control' %>
      </div>
    </div>
    <%= f.submit 'Update pet', class: 'btn btn-primary pull-right' %>
  <% end %>
</div>
