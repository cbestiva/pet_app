<div class="container">
  <h1>Jingling Gate Pets</h1>
  <nav class="pull-right">
    <%= link_to 'Owners', owners_url %>
    <%= link_to 'Ownerships', ownerships_url %>
  </nav>
  <div class="col-sm-12 text-right"><%= link_to 'Add pet', new_pet_url%></div>
  <table class="table table-striped">
    <tr>
      <th>Id#</th>
      <th>Name</th>
      <th>Age</th>
      <th>Type</th>
      <th>Owners</th>
      <th></th>
      <th></th>
    </tr>
    <% @pets.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.name %></td>
        <td><%= p.age %></td>
        <td><%= p.pet_type %></td>
        <td><%= p.owners.map{|o| o.first_name}.to_sentence %></td>
        <td><%= link_to 'Edit', [:edit, p] %></td>
        <td><%= link_to 'Delete', p, method: :delete %></td>
      </tr>
    <% end %>
  </table>

</div>
