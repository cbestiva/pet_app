<div class="container">
  <h1>Edit toy</h1>
  <%= form_for @toy, html: {class: 'form-horizontal col-sm-4'} do |f| %>
    <div class="form-group">
      <%= f.label :name, 'Type', class:'col-sm-4' %>
      <div class="col-sm-8">
        <%= f.text_field :name, class:'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :color, class:'col-sm-4' %>
      <div class="col-sm-8">
        <%=f.text_field :color, class:'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :pet_id, 'Belongs to pet', class:'col-sm-6' %>
      <%= f.collection_select :pet_id, @pets, :id, :name %>
    </div>
    <%= f.submit 'Update toy', class:'btn btn-primary pull-right' %>
  <% end %>
</div>
